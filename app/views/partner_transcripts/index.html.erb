<p id="notice"><%= notice %></p>
<style>
header {background: black;color: white;}
</style>
<div class="flex-container">
  <header>
<h1>Partner Transactions</h1>
</header>
</div>

<div style="overflow-x:auto;">
  <table width=1555 height=70>
<thead>
    <tr>
      <th>sn.no</th>
      <th>Date</th>
      <th>Name</th>
      <th>Transaction type</th>
      <th>Description</th>
      <th>Credit</th>
      <th>Debit</th>
      <th>Created_at</th>
      <th>Updated_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody align="center">
    <% @partner_transcripts.each do |partner_transcript| %>
      <tr>
      <td><%= partner_transcript.id %></td>
        <td><%= partner_transcript.created_at %></td>
        <td><%= partner_transcript.name %></td>
        <td><%= partner_transcript.transaction_type %></td>
        <td><%= partner_transcript.description %></td>
        <td><%= partner_transcript.credit %></td>
        <td><%= partner_transcript.debit %></td>
        <td><%= partner_transcript.created_at %></td>
        <td><%= partner_transcript.updated_at %></td>
        <td><%= link_to 'Show', partner_transcript %></td>
        <td><%= link_to 'Edit', edit_partner_transcript_path(partner_transcript) %></td>
        <td><%= link_to 'Destroy', partner_transcript, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
credit_total:<%=  PartnerTranscript.sum('credit') %> <br />
debit_total: <%= PartnerTranscript.sum('debit') %><br />
total: <%= PartnerTranscript.sum('credit')-PartnerTranscript.sum('debit') %>
</div>
<br>

